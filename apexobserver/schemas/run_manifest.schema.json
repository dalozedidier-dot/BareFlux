{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/apexobserver/run_manifest.schema.json",
  "title": "ApexObserver Run Manifest",
  "type": "object",
  "required": [
    "tool",
    "version",
    "run_id",
    "created_at_utc",
    "inputs",
    "config",
    "series"
  ],
  "properties": {
    "tool": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "run_id": {
      "type": "string"
    },
    "created_at_utc": {
      "type": "string"
    },
    "command": {
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "kind"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "config": {
      "type": "object",
      "required": [
        "path"
      ],
      "properties": {
        "path": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "series": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "path",
          "artifacts"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
